<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head"); %>
  </head>
  <body>
    <div class="container">
      <main>
        <div class="main-container">
          <div class="login-container">
            <h1>Log in</h1>
            <form class="login-form">
              <div>
                <input
                  id="email"
                  class="input"
                  name="email"
                  type="email"
                  placeholder="Your email"
                />
              </div>
              <div>
                <input
                  id="password"
                  class="input"
                  name="password"
                  type="password"
                  placeholder="Your password"
                />
              </div>

              <button id="login-button" type="submit">Log in</button>
              <img class="login-loader" src="/oval.svg" alt="Loader" />
            </form>
          </div>
        </div>
      </main>
    </div>
    <script src="/login.js" type="module"></script>
  </body>
</html>
